    "version": "0.2.0",
    "configurations": [
        {
            "name": "ClemBot",
            "type": "python",
            "request": "launch",
            "program": "bot/__main__.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Docker: Python - General",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "general"
            }
        }
    ]
}